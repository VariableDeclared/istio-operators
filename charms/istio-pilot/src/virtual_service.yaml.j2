---
apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: {{ service }}
spec:
  gateways:
  - '{{ gateway }}'
  hosts:
  - '*'
  http:
  - name: app-route
    match:
    - uri:
        prefix: '{{ prefix }}'
    rewrite:
      uri: '{{ rewrite }}'
    route:
    - destination:
        host: '{{ service }}.{{ namespace }}.svc.cluster.local'
        port:
          number: {{ port }}
